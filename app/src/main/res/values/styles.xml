<resources>

    <style name="Base.Theme.BitcoinBlue" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primary</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!--   theme UI controls like checkboxes and text fields e.g. FloatActionButton -->
        <item name="colorAccent">@color/accent</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/primary_text</item>

        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/secondary_text</item>
        
        <item name="android:windowBackground">@color/window_background</item>

        <!-- textColorLink is used as the default value for all links -->
        <item name="android:textColorLink">@color/blue</item>

        <item name="windowActionModeOverlay">false</item>
        
        <item name="actionModeBackground">@drawable/action_mode_background</item>
        
        <!--<item name="android:textColorHighlight">@color/white</item>-->
        
    </style>
  
    <!--
       Base application theme, dependent on API level. This theme is replaced
       by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
   -->
    <style name="AppBaseTheme" parent="Base.Theme.BitcoinBlue">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="SpinnerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>

    </style>

    <!-- Application theme. -->
    <style name="EditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BorderlessButtonStyle" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:textColor">@color/black</item>
        <!--<item name="android:fontFamily">@string/font_fontFamily_medium</item>-->
    </style>

    <style name="BorderlessButtonStyle.Small" parent="BorderlessButtonStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/body_text_blue_1</item>
        <!--<item name="android:fontFamily">@string/font_fontFamily_medium</item>-->
    </style>

    <style name="BorderlessButtonStyle.Active" parent="BorderlessButtonStyle">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="DividerVertical">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="DividerVertical.Dark" parent="DividerVertical">
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/gray_light</item>
    </style>
    
</resources>
